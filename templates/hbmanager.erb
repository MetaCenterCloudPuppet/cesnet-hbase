#! /bin/sh

#
# Helper script for checking and changing status of all HBAse daemons
# relevant for this node.
#

if [ -z "$1" ]; then
	echo "Usage: $0 start|stop|status|..."
	echo "       $0 clean"
	exit 1
fi

while [ -n "$1" ]; do

	case "$1" in
	clean)
		rm -rfv /var/log/hbase-*/* 2>/dev/null || :
		rm -rfv /var/log/hbase/* 2>/dev/null || :
		;;
	start|restart|*)
<%if scope.lookupvar('hbase::zookeeper_hostnames').include? @fqdn and not scope.lookupvar('hbase::external_zookeeper') -%>		echo "zookeeper $1"; service <%= scope.lookupvar('hbase::daemons')['zookeeper'] -%> $1
<%end-%>
<%if scope.lookupvar('hbase::master_hostname') == @fqdn -%>		echo "master $1"; service <%= scope.lookupvar('hbase::daemons')['master'] -%> $1
<%end-%>
<%if scope.lookupvar('hbase::slaves').include? @fqdn -%>		echo "regionserver $1"; service <%= scope.lookupvar('hbase::daemons')['regionserver'] -%> $1
<%end-%>
		;;
	stop)
<%if scope.lookupvar('hbase::slaves').include? @fqdn -%>		echo "regionserver $1"; service <%= scope.lookupvar('hbase::daemons')['regionserver'] -%> $1
<%end-%>
<%if scope.lookupvar('hbase::master_hostname') == @fqdn -%>		echo "master $1"; service <%= scope.lookupvar('hbase::daemons')['master'] -%> $1
<%end-%>
<%if scope.lookupvar('hbase::zookeeper_hostnames').include? @fqdn and not scope.lookupvar('hbase::external_zookeeper') -%>		echo "zookeeper $1"; service <%= scope.lookupvar('hbase::daemons')['zookeeper'] -%> $1
<%end-%>
		;;
	esac

	shift
done
